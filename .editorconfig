#### Configure indentation so VS doesn't mess up the formatting all the time
[*]
indent_style = space

[*.csproj]
indent_style = 2

[*.props]
indent_style = 2


#### StyleCop Analyzer rules ####
[*.cs]

# SA0001: XML comment analysis
dotnet_diagnostic.SA0001.severity = none

## SpacingRules
# SA1000: Keywords must be spaced correctly
dotnet_diagnostic.SA1000.severity = none
# SA1002: Semicolons must be spaced correctly
dotnet_diagnostic.SA1002.severity = none
# SA1005: Single line comment should begin with a space
dotnet_diagnostic.SA1005.severity = none
# SA1009: Closing parenthesis must be spaced correctly
dotnet_diagnostic.SA1009.severity = none

## ReadabilityRules
# SA1101: Prefix local calls with this
dotnet_diagnostic.SA1101.severity = none
# SA1108: Block statements must not contain embedded comments
dotnet_diagnostic.SA1108.severity = none
# SA1109: Block statements must not contain embedded regions
dotnet_diagnostic.SA1109.severity = none
# SA1110: Opening parenthesis or bracket must be on declaration line
dotnet_diagnostic.SA1110.severity = none
# SA1111: Closing parenthesis must be on line of last parameter
dotnet_diagnostic.SA1111.severity = none
# SA1112: Closing parenthesis must be on line of opening parenthesis
dotnet_diagnostic.SA1112.severity = none
# SA1122: Use string.Empty for empty strings
dotnet_diagnostic.SA1122.severity = none

## OrderingRules: disable all
dotnet_diagnostic.SA1200.severity = none
dotnet_diagnostic.SA1201.severity = none
dotnet_diagnostic.SA1202.severity = none
dotnet_diagnostic.SA1203.severity = none
